<h2>Sign up</h2>
<div class="form-top">
    <div class="form-top-left">
      <h3>Sign Up to our site</h3>
        <p>Enter your username and password to sign up:</p>
    </div>
    <div class="form-top-right">
      <i class="fa fa-lock"></i>
    </div>
</div>
<div class="form-bottom">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ,
  class: "login-form") do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-username form-control", 
      placeholder:  "Username..." , type: "text"%>

    </div>

    <div class="form-gro up">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" ,class: "form-username form-control", placeholder:  "Password..." %>
    </div>

    <div class="form-group">
    <em>Password confirm</em>
      <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-username form-control", placeholder:  "Password Confirm..." %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
