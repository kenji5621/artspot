<h2>Log In</h2>
<div class="form-top">
    <div class="form-top-left">
      <h3>Sign Up to our site</h3>
        <p>Enter your username and password to sign up:</p>
    </div>
    <div class="form-top-right">
      <i class="fa fa-lock"></i>
    </div>
</div>

<div class="form-bottom">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    class: "login-form") do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true , class: "form-username form-control", 
      placeholder:  "your email..." , type: "text"%>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off"  ,class: "form-username form-control", placeholder:  "Password..."%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" , class: "btn"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
